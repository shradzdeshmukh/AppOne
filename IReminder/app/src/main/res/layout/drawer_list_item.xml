<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="@dimen/default_padding"
    android:layout_height="@dimen/nav_drawer_item_height"
    android:background="@drawable/list_selector" >

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/nav_drawer_left_icon_width"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/nav_drawer_left_margin"
        android:contentDescription="@string/desc_list_item_icon"
        android:src="@drawable/label" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/icon"
        android:layout_marginLeft="@dimen/nav_drawer_left_margin_title"
        android:gravity="center_vertical"
        android:textSize="@dimen/text_size_med"
        android:padding="@dimen/default_padding"
        android:textColor="@drawable/nav_list_text_selector"
         />

    <TextView
        android:id="@+id/counter"
        android:minWidth="20dp"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:padding="2dp"
        android:text="720"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/default_padding"
        android:background="@drawable/counter_bg"
        android:textColor="@color/counter_text_color" />

</RelativeLayout>